<mujoco>
	<worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
		
		 <!-- Base -->
		<body name="base" pos="0 0 0">
			<!-- Pitch joint -->
			<joint name="pitch" type="hinge" axis="1 0 0" limited="true" range="-15 15"/>
			
			<!-- Roll joint -->
			<joint name="roll" type="hinge" axis="0 1 0" limited="true" range="-15 15"/>

			<!-- The platform -->
			<body name="platform" pos="0 0 0.2" euler="0 0 0">
				<geom name="plate" type="box" size="1 1 0.02" rgba="0.3 0.3 0.7 1"/>
			</body>
		</body>

		<body name="ball" pos="0 0 1">
			<joint type="free"/>
			<geom type="sphere" size=".1 .1 .1" rgba="0 .9 0 1"/>
		</body>
	</worldbody>

	<actuator>
		<position name="pitch_motor" joint="pitch" kp="5000" kv="1000"/>
  		<position name="roll_motor"  joint="roll" kp="5000" kv="1000"/>
  	</actuator>

	<sensor>
		<jointpos name="plat_rx" joint="pitch"/>
		<jointpos name="plat_ry" joint="roll"/>
	</sensor>
</mujoco>